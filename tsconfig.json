{
  "compilerOptions": {
    "noEmit": true,
    "pretty": true,
    "resolveJsonModule": true,
    "module": "commonjs",
    "target": "esnext",
    "sourceMap": true,
    "removeComments": true,
    "jsx": "react",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "lib": ["es2017"],
    "baseUrl": "./",
    "paths": {
      "*": ["custom_typings/*", "node_modules/*", "src"]
    }
  },
  "exclude": ["mode_modules"],
  "include": ["src"]
}
